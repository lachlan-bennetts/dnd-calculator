# Run the container with `docker run -p 3000:3000 -t dnd-calculator`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system dnd-calculator && \
          adduser --system -G dnd-calculator dnd-calculator

COPY dist/apps/dnd-calculator dnd-calculator
RUN chown -R dnd-calculator:dnd-calculator .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix dnd-calculator --omit=dev -f install

